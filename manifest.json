{
  "manifest_version": 2,
  "name": "NoGo",
  "version": "1",

  "description": "A plain text description",

  "browser_action": {
    "default_icon":{
      "64":"icon.png"
    },
    "default_title": "NoGo",
    "default_popup": "popup.html"
  },
  
  "background": {
    "scripts" : ["background.js"],
    "persistent": true
  },

  "permissions" : [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
	"storage"
    ]
